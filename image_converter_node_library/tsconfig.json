{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "paths": {
      "@common/*": [
        "../image_converter_js_common/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@image_converter/*": [
        "./src/image_converter_binary/*"
      ]
    },
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.js",
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.test.ts",
  ],
}